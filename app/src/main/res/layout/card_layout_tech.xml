<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/card"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/customerborder"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="3dp">

            <ImageView
                android:id="@+id/img_profile_card"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"

                android:src="@drawable/username"/>


            <TextView
                android:id="@+id/txt_name_card"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:fontFamily="@font/apercumono"
                android:textColor="#2727A4"
                android:textSize="13sp"
                android:text="Anushka" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="3dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/txt_rating_card"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/apercumono"
                android:textColor="#2727A4"
                android:textSize="12sp"
                android:text="4.0"/>

            <ImageView
                android:id="@+id/st1"
                android:layout_width="13dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:tint="#F3BC17"
                android:src="@drawable/star"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/txt_job_card"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/apercumono"
            android:layout_gravity="center"
            android:textColor="#010109"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="Plumber"/>



    </LinearLayout>


</androidx.cardview.widget.CardView>