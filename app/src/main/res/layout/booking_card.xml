<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/card"
    app:cardCornerRadius="15dp"
    >

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/customborder_card"
        >

        <TextView
            android:id="@+id/txt_name_booking"
            android:layout_width="186dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/apercumono"
            android:textColor="#2727A4"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Demo Name"/>

        <TextView
            android:id="@+id/txt_time_booking"
            android:layout_width="293dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/apercumono"
            android:textColor="#030320"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:text="12 : 30pm" />

    </LinearLayout>


</androidx.cardview.widget.CardView>