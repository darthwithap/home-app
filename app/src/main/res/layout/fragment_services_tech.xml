<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backblue" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/apercumono"
        android:text="Choose a category"
        android:textColor="#2727A4"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_edges"
                android:backgroundTint="#2727A4"
                android:paddingLeft="30dip"
                android:paddingTop="1dip"
                android:paddingRight="30dip"
                android:scaleType="centerInside"
                android:tint="#FFFFFF"
                app:srcCompat="@drawable/salon"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_edges"
                android:backgroundTint="#C1C1E6"
                android:paddingLeft="30dip"
                android:paddingTop="1dip"
                android:paddingRight="30dip"
                android:scaleType="centerInside"
                android:tint="#080842"
                app:srcCompat="@drawable/clean" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_edges"
                android:backgroundTint="#C1C1E6"
                android:paddingLeft="30dip"
                android:paddingTop="1dip"
                android:paddingRight="30dip"
                android:scaleType="centerInside"
                android:tint="#080842"
                app:srcCompat="@drawable/tools" />


            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_edges"
                android:backgroundTint="#2727A4"
                android:paddingLeft="30dip"
                android:paddingTop="1dip"
                android:paddingRight="30dip"
                android:scaleType="centerInside"
                android:tint="#FFFFFF"
                app:srcCompat="@drawable/ic_water_bottle"
                tools:ignore="VectorDrawableCompat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_edges"
                android:backgroundTint="#2727A4"
                android:paddingLeft="30dip"
                android:paddingTop="1dip"
                android:paddingRight="30dip"
                android:scaleType="centerInside"
                android:tint="#FFFFFF"
                app:srcCompat="@drawable/decor"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_edges"
                android:backgroundTint="#C1C1E6"
                android:paddingLeft="30dip"
                android:paddingTop="1dip"
                android:paddingRight="30dip"
                android:scaleType="centerInside"
                android:tint="#080842"
                app:srcCompat="@drawable/chef"
                tools:ignore="VectorDrawableCompat" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/apercumono"
        android:text="or"
        android:textColor="#2727a4"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

    <Button
        android:id="@+id/btn_services_search_tech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_bg_col"
        android:fontFamily="@font/apercumono"
        android:paddingHorizontal="20dp"
        android:text="Search for Technician Nearby"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>