<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backblue" />


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="552dp"
        android:fontFamily="@font/apercumono"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="#2727A4"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.64" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.885">

        <Button
            android:id="@+id/btn_settings_profile_cust"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_margin="5dp"
            android:background="@drawable/customerborder"
            android:fontFamily="@font/apercumono"
            android:text="View profile"
            android:textAllCaps="false"
            android:textColor="#2727A4"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/customerborder">

            <TextView
                android:layout_width="275dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/apercumono"
                android:padding="22dp"
                android:text="Working"
                android:textAlignment="center"
                android:textColor="#2727A4"
                android:textSize="24sp" />

            <Switch
                android:layout_width="wrap_content"
                android:id="@+id/switch_settings_working_cust"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_settings_schedule_cust"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_margin="5dp"
            android:background="@drawable/customerborder"
            android:fontFamily="@font/apercumono"
            android:text="Schedule"
            android:textAllCaps="false"
            android:textColor="#2727A4"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/customerborder">

            <TextView
                android:layout_width="275dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/apercumono"
                android:padding="22dp"
                android:text="Notifications"
                android:textAlignment="center"
                android:textColor="#2727A4"
                android:textSize="24sp" />

            <Switch
                android:layout_width="wrap_content"
                android:id="@+id/switch_settings_noti_cust"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_settings_about_cust"
            android:layout_width="350dp"
            android:layout_height="86dp"
            android:layout_margin="5dp"
            android:background="@drawable/customerborder"
            android:fontFamily="@font/apercumono"
            android:text="About"
            android:textAllCaps="false"
            android:textColor="#2727A4"
            android:textSize="24sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
