<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/customborder_card"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_no_wifi"
            android:tint="#2727a4" />

        <TextView
            android:id="@+id/txt_name_card_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="65dp"
            android:fontFamily="@font/apercumono"
            android:text="No internet connection!"
            android:textColor="#2727A4"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="50dp"
            android:fontFamily="@font/apercumono"
            android:text="Connect to Internet Now?"
            android:textColor="#2727A4"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="10dp">

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:id="@+id/btn_internetalert_no"
                android:background="@drawable/customerborder"
                android:text="No"
                android:textColor="#2727a4">
            </Button>

            <Button
                android:layout_width="120dp"
                android:id="@+id/btn_internetalert_yes"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edges"
                android:backgroundTint="#2727A4"
                android:layout_marginHorizontal="2dp"
                android:text="Yes"
                android:textColor="#FFFFFF">

            </Button>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
